{
  "name": "@vueuse/gesture",
  "version": "2.0.0",
  "description": "ðŸ•¹ Vue Composables making your app interactive",
  "repository": "https://github.com/vueuse/gesture",
  "bugs": {
    "url": "https://github.com/vueuse/gesture/issues"
  },
  "homepage": "https://github.com/vueuse/gesture#readme",
  "author": "YaeÌˆl GUILLOUX <yael.guilloux@gmail.com>",
  "license": "MIT",
  "keywords": [
    "vue",
    "hook",
    "gesture",
    "motion",
    "v-gesture",
    "use-gesture-vue",
    "interactive-vue"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "unbuild",
    "dev": "jiti scripts/watch.ts --cache",
    "lint": "prettier -c --parser typescript \"{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:fix": "pnpm lint --write",
    "test:types": "tsc --build tsconfig.json",
    "test": "pnpm test:types",
    "dev:docs": "vitepress dev docs",
    "build:docs": "vitepress build docs",
    "serve:docs": "vitepress serve docs",
    "dev:demo": "vite",
    "build:demo": "vite build",
    "serve:demo": "vite serve demo/dist",
    "release": "release-it"
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "chokidar": "^3.6.0",
    "consola": "^3.2.3",
    "upath": "^2.0.1",
    "vue-demi": "*"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.1",
    "vue": "^2.0.0 || >=3.0.0-rc.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/compiler-sfc": "^3.4.19",
    "@vue/server-renderer": "^3.4.19",
    "@vue/test-utils": "^2.4.4",
    "@vuedx/typecheck": "^0.7.6",
    "@vuedx/typescript-plugin-vue": "^0.7.6",
    "@vueuse/motion": "^2.1.0",
    "jiti": "^1.21.0",
    "lint-staged": "^15.2.2",
    "pascalcase": "^2.0.0",
    "patch-vue-directive-ssr": "^0.0.1",
    "popmotion": "^11.0.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^5.1.4",
    "vite-plugin-windicss": "^1.9.3",
    "vitepress": "^0.22.4",
    "vue": "^3.4.19",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
